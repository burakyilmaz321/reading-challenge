<nav class="navbar navbar-expand-md fixed-top navbar-transparent">
	<div class="container">
		<div class="navbar-translate">
			<%= link_to "Reading Challenge 2018", root_path, class: "navbar-brand" %>
		</div>
		<%= devise_error_messages! %>
	</nav>
	<div class="wrapper">
		<div class="page-header" style="background-image: url(<%= asset_path 'login-image.jpg' %>);">
			<div class="filter"></div>
			<div class="container">
				<div class="row">
					<div class="col-lg-4 ml-auto mr-auto">
						<div class="card card-register" style="min-height: 200px;">

							<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "register-form" }) do |f| %>
							<label>Email</label>

							<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>

							<%= f.submit "Reset Password", class: "btn btn-danger btn-block btn-round" %>
							<% end %>


						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

