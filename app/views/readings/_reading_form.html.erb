<%= form_for(reading, html: {class: "form-group"}) do |f| %>
  <%= f.fields_for :book_attributes do |b| %>
    <p>Book Title:</p>
    <%= b.text_field :title, value: reading.book.nil? ? "" : reading.book.title, class: "form-control" %>
    
    <p>Number of Pages:</p>
    <%= b.number_field :page_num, value: reading.book.nil? ? "" : reading.book.page_num, class: "form-control" %>
    
    <%= b.fields_for :author_attributes do |a| %>
      <p>Author Name:</p>
      <%= a.text_field :name, value: reading.book.nil? ? "" : reading.book.author.name, class: "form-control" %>
    <% end %>
  <% end %>
  
  <p>Reading Status:</p>
  <%= f.select(:status, %w(Reading Done), {}, {:class => "custom-select"}) %><br>

  <p>Month:</p>
  <%= f.select(:month, @months, {}, {:class => "custom-select"}) %><br>
  <div class="text-center mt-3">
    <%= f.submit class: "btn btn-outline-success btn-round" %>
  </div>
<% end %>